require "spec"
require "../src/*"

describe "<%-= to_captlized(@json["exercise"].to_s) %>" do
<%- @json["cases"].as_a.each do |cases| %>
    <%- cases["cases"].as_a.each do |sub_case| %>
    <%= status()%> "<%-= sub_case["description"] %>" do
        <%- if sub_case["input"]["item"]? -%>
            <%= to_captlized(@json["exercise"].to_s) %>.<%= to_snake(sub_case["property"].to_s)%>("<%= sub_case["input"]["item"] %>", <%= sub_case["input"]["score"] %>).should eq(<%= sub_case["expected"] %>)
        <%- else -%>
            <%= to_captlized(@json["exercise"].to_s) %>.<%= to_snake(sub_case["property"].to_s)%>(<%= sub_case["input"]["score"] %>).should eq(<%= sub_case["expected"]? %> of String)
        <% end %>
    end
    <% end %>
<% end %>
end
